<!-- Display All Post Previews -->

{{#each posts as |post| }}

<div class="columns is-centered mt-5">
            <article class="panel is-info column is-three-fifths">
                <p class="panel-heading">
                    {{post.title}}
                </p>
                <p class="panel-block pt-3 pb-3">
                    Posted by {{post.user.username}} on {{format_date post.createdAt}}
                  </p>
                <div class="control mt-3 mb-0 ">
                    <a class="button is-info" href="/api/posts/{{post.id}}">View Post</a>
                </div>
            </article>
        </div>

{{/each}}
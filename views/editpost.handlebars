<!-- Edit Post Form -->

<div class="columns is-centered mt-5">
    <article class="panel is-info column is-three-fifths">
        <p class="panel-heading">
            Edit Post
        </p>
        <form id="edit-post-form" data-post_id="{{post.id}}">
            <div class="field mt-5">
                <label class="label">Post Title</label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input" type="text" value="{{post.title}}" id="edit-post-title">
                    <span class="icon is-small is-left">
                        <i class="fas fa-book-reader"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <label class="label">Post Content</label>
                <div class="control">
                    <textarea class="textarea" id="edit-post-content">{{post.content}}</textarea>
                </div>
            </div>
            <div class="panel-block flex-row-between">
                <button class="button is-info mx-auto" type="submit" id="edit-post-button">
                    Edit Post
                </button>
                <button class="button is-dark mx-auto" type="reset" id="delete-post-button">
                    Delete Post
                </button>
            </div>
        </form>
    </article>
</div>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<div
    class="uk-flex uk-flex-around uk-width-auto uk-margin-large-top uk-margin-bottom-large uk-margin-large-left uk-margin-large-right">
    <div class="uk-flex uk-flex-column uk-flex-center uk-flex-middle uk-width-1-1">
        <h2> Edit Post </h2>

        <form id="edit-post-form" class="uk-width-1-2" data-post_id="{{post.id}}">

            <div class="uk-margin">
                <label class="uk-form-label uk-text-center">Post Title</label>
                <input class="uk-input" type="text" value="{{post.title}}" id="edit-post-title">
            </div>

            <div class="uk-margin">
                <label class="uk-form-label uk-text-center">Post Content</label>
                <textarea class="uk-textarea" rows="5" id="edit-post-content">{{post.content}}</textarea>
            </div>

            <div class="uk-align-center">
                <div class="uk-margin uk-align-center">
                    <button class="uk-button uk-button-primary uk-width-1-3" type="submit">Edit Post</button>
                </div>
                <div class="uk-margin uk-align-center">
                    <button class="uk-button uk-button-primary uk-width-1-3" type="reset">Delete Post</button>
                </div>
            </div>

        </form>
    </div>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
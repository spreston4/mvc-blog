<!-- New Post Form -->

<div class="columns is-centered mt-5">
    <article class="panel is-info column is-three-fifths">
        <p class="panel-heading">
            Create New Post
        </p>
        <form id="new-post-form">
            <div class="field mt-5">
                <label class="label">Post Title</label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input" type="text" placeholder="Title" id="post-title">
                    <span class="icon is-small is-left">
                        <i class="fas fa-book-reader"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <label class="label">Post Content</label>
                <div class="control">
                    <textarea class="textarea" placeholder="Enter content here" id="post-content"></textarea>
                </div>
            </div>
            <div class="field">
                <p class="control">
                    <button class="button is-info" type="submit" id="new-post-button">
                        Create Post
                    </button>
                </p>
            </div>
        </form>
    </article>
</div>


<script src="/js/new-post.js"></script>
<!-- New Post Form -->

<div
    class="uk-flex uk-flex-around uk-width-auto uk-margin-large-top uk-margin-bottom-large uk-margin-large-left uk-margin-large-right">
    <div class="uk-flex uk-flex-column uk-flex-center uk-flex-middle uk-width-1-1">
        <h2> Create a New Post </h2>

        <form id="new-post-form" class="uk-width-1-2">

            <div class="uk-margin">
                <label class="uk-form-label uk-text-center">Post Title</label>
                <input class="uk-input" type="text" placeholder="Title" id="post-title">
            </div>

            <div class="uk-margin">
                <label class="uk-form-label uk-text-center">Post Content</label>
                <textarea class="uk-textarea" rows="5" placeholder="Content" id="post-content"></textarea>
            </div>

            <div class="uk-margin">
                <button class="uk-button uk-button-primary" type="submit">Create Post</button>
            </div>

        </form>
        
    </div>
</div>


<script src="/js/new-post.js"></script>
<!-- Login Form -->

<div class="columns is-centered mt-5">
    <article class="panel is-info column is-three-fifths">
        <p class="panel-heading">
            Login
        </p>
        <p class="panel-block pt-3 pb-3">
            <a href="/signup">Sign up for a new account here.</a>
        </p>
        <form class="login-form">
            <div class="field mt-5">
                <label class="label">E-mail</label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input" type="email" placeholder="E-mail" id="email-login">
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <label class="label">Password</label>
                <p class="control has-icons-left">
                    <input class="input" type="password" placeholder="Password" id="password-login">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control">
                    <button class="button is-info" type="submit" id="button-login">
                        Login
                    </button>
                </p>
            </div>
        </form>
    </article>
</div>


<script src="/js/login.js"></script>